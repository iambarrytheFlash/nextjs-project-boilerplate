<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VideoGifWidget" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/gray_light</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorSecondary">@color/gray_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/gray_light</item>
        <item name="colorOnSecondaryContainer">@color/gray_dark</item>
        <item name="colorTertiary">@color/gray_medium</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/gray_light</item>
        <item name="colorOnTertiaryContainer">@color/gray_dark</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorErrorContainer">@android:color/holo_red_light</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">@android:color/holo_red_dark</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/gray_light</item>
        <item name="colorOnSurfaceVariant">@color/gray_dark</item>
        <item name="colorOutline">@color/gray_medium</item>
        <item name="colorOutlineVariant">@color/gray_light</item>
    </style>

    <style name="Theme.VideoGifWidget" parent="Base.Theme.VideoGifWidget" />
</resources>
